<%= form_with model: @ad, local: true do |form| %>
  <% if @ad.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@ad.errors.count, "error") %> prohibited
        this ad from being saved:
      </h2>
      <ul>
        <% @ad.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
